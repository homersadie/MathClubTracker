<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping namespace="MathClubTracker.Domain.DomainObjects" assembly="MathClubTracker.Domain" xmlns="urn:nhibernate-mapping-2.2">
  <class name="ClassSession" table="ClassSession" >
    <id name="Id" type="Int32">
      <column name="Id"  />
      <generator class="assigned" />
    </id>

    <property name="LocationId" type="Int32">
      <column name="LocationId" not-null="true" precision="10" scale="0" sql-type="int" />
    </property>
    <property name="SessionDate" type="DateTime">
      <column name="SessionDate" not-null="true" precision="23" scale="3" sql-type="datetime" />
    </property>

    <many-to-one name="MyClass" class="Class">
      <column name="ClassId" not-null="true" precision="10" scale="0" sql-type="int" />
    </many-to-one>

    <bag name="MyClassSessionStudentBag" inverse="true" generic="true" cascade="all-delete-orphan">
      <key>
        <column name="ClassSessionId" not-null="false" precision="10" scale="0" sql-type="int" />
      </key>
      <one-to-many class="ClassSessionStudent" />
    </bag>

  </class>
</hibernate-mapping>







